{
  "name": "@nathanpb/kext",
  "version": "0.0.4",
  "description": "Kotlin inspired extension library for NodeJS",
  "author": "Nathan P. Bombana <nathan.pbombana@gmail.com>",
  "repository": "https://github.com/NathanPB/kext",
  "license": "MIT",
  "types": "./index.d.ts",
  "scripts": {
    "test": "jest --passWithNoTests",
    "clean": "rm -rf dist",
    "docs": "typedoc --entryPoints src/index.ts",
    "build": "npm run clean && tsc -p tsconfig.json && cp package.json dist/package.json",
    "prerelease": "build",
    "release": "cd dist && publish --access public"
  },
  "devDependencies": {
    "@types/jest": "^26.0.21",
    "@types/node": "^15.0.1",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.4",
    "typedoc": "^0.20.35",
    "typescript": "^4.2.3"
  }
}
