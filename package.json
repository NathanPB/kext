{
  "name": "@nathanpb/kext",
  "version": "1.2.3",
  "description": "Kotlin inspired extension library for NodeJS",
  "author": "Nathan P. Bombana <nathan.pbombana@gmail.com>",
  "repository": "https://github.com/NathanPB/kext",
  "license": "MIT",
  "types": "./index.d.ts",
  "gypfile": true,
  "scripts": {
    "pretest": "npm run build:native",
    "prebench": "npm run build:native",
    "test": "jest --passWithNoTests",
    "bench": "jest --projects jest-bench.config.json",
    "clean": "rm -rf dist coverage docs benchmarks cmake-build-debug build node-gyp.log",
    "docs": "typedoc --entryPoints src/index.ts",
    "prebuild": "npm run clean",
    "build:tsc": "tsc -p tsconfig.json && cp package.json dist && cp README.md dist && cp LICENSE dist",
    "build:native": "(node-gyp rebuild) || (exit 0)",
    "build": "npm run build:tsc && npm run build:native",
    "prerelease": "npm run build",
    "release": "cd dist && npm publish --access public",
    "install": "npm run build:native"
  },
  "devDependencies": {
    "@nathanpb/jest-bench": "^0.1.6-1",
    "@types/jest": "^27.0.1",
    "@types/node": "^14.17.12",
    "jest": "^27.1.0",
    "node-addon-api": "^4.2.0",
    "ts-jest": "^27.0.5",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.3",
    "typescript": "^4.4.4"
  }
}
