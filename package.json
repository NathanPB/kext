{
  "name": "@nathanpb/kext",
  "version": "1.2.3",
  "description": "Kotlin inspired extension library for NodeJS",
  "author": "Nathan P. Bombana <nathan.pbombana@gmail.com>",
  "repository": "https://github.com/NathanPB/kext",
  "license": "MIT",
  "types": "./index.d.ts",
  "scripts": {
    "test": "jest --passWithNoTests",
    "clean": "rm -rf dist coverage docs",
    "docs": "typedoc --entryPoints src/index.ts",
    "build": "npm run clean && tsc -p tsconfig.json && cp package.json dist && cp README.md dist && cp LICENSE dist",
    "prerelease": "npm run build",
    "release": "cd dist && npm publish --access public"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^14.17.12",
    "jest": "^27.1.0",
    "ts-jest": "^27.0.5",
    "tslib": "^2.3.1",
    "typedoc": "^0.21.7",
    "typescript": "^4.4.2"
  }
}
