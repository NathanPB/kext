{
  "name": "@nathanpb/kext",
  "version": "1.1.1",
  "description": "Kotlin inspired extension library for NodeJS",
  "author": "Nathan P. Bombana <nathan.pbombana@gmail.com>",
  "repository": "https://github.com/NathanPB/kext",
  "license": "MIT",
  "types": "./index.d.ts",
  "scripts": {
    "test": "jest --passWithNoTests",
    "clean": "rm -rf dist",
    "docs": "typedoc --entryPoints src/index.ts",
    "build": "npm run clean && tsc -p tsconfig.json && cp package.json dist/package.json",
    "prerelease": "npm run build",
    "release": "cd dist && npm publish --access public"
  },
  "devDependencies": {
    "@types/jest": "^27.0.0",
    "@types/node": "^15.0.1",
    "jest": "^27.0.6",
    "ts-jest": "^27.0.4",
    "tslib": "^2.3.0",
    "typedoc": "^0.21.4",
    "typescript": "^4.2.3"
  }
}
